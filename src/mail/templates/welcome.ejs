<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Welcome to <%= appName || 'MyApp' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Basic resets for email clients -->
  <style>
    /* Preheader text hidden in inbox preview */
    .preheader { display:none!important; visibility:hidden; opacity:0; color:transparent; height:0; width:0; overflow:hidden; mso-hide:all; }
    /* Mobile tweaks */
    @media (max-width: 600px) {
      .container { width: 100% !important; }
      .p-24 { padding: 16px !important; }
      .card { border-radius: 10px !important; }
    }
    /* Dark mode hint (supported in some clients) */
    @media (prefers-color-scheme: dark) {
      body, .bg { background:#0b1220 !important; color:#e5e7eb !important; }
      .card { background:#172033 !important; color:#e5e7eb !important; }
      a.button { background: <%= brandColor || '#4e73df' %> !important; color:#fff !important; }
      a.link { color: <%= brandColor || '#4e73df' %> !important; }
    }
  </style>
</head>
<body style="margin:0; padding:0; background:#f4f6f8; color:#0f172a; font-family: -apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Inter,Arial,sans-serif;">
  <!-- Preheader (shows in inbox preview) -->
