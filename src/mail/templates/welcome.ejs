        <!-- Container -->
        <table role="presentation" cellpadding="0" cellspacing="0" border="0" width="600" class="container" style="width:600px; max-width:600px;">
          <!-- Header / Logo -->
          <tr>
            <td style="text-align:center; padding: 8px 24px 0;">
              <a href="<%= baseUrl || '#' %>" style="text-decoration:none; color:inherit;">
                <div style="font-size:22px; font-weight:700;"><%= appName || 'MyApp' %></div>
              </a>
            </td>
          </tr>

          <!-- Card -->
          <tr>
            <td class="card" style="background:#ffffff; border-radius:14px; padding: 28px; box-shadow:0 6px 18px rgba(16,24,40,.06);">
              <h1 style="margin:0 0 10px; font-size:24px; line-height:1.3; color:#111827;">
                Welcome<% if (name) { %>, <%= name %><% } %>! ðŸŽ‰
